<%= form_with model: @client, html: { class: 'model-form' } do |form| %>
  <div class="form-group">
    <%= form.label :surname, class: 'form-label' %>
    <%= form.text_field :surname, class: 'form-input' %>
    <% if @client.errors[:surname].any? %>
      <div class="error-message"><%= @client.errors[:surname].join(", ") %></div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-input' %>
    <% if @client.errors[:name].any? %>
      <div class="error-message"><%= @client.errors[:name].join(", ") %></div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :patronymic, class: 'form-label' %>
    <%= form.text_field :patronymic, class: 'form-input' %>
    <% if @client.errors[:patronymic].any? %>
      <div class="error-message"><%= @client.errors[:patronymic].join(", ") %></div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-input' %>
    <% if @client.errors[:email].any? %>
      <div class="error-message"><%= @client.errors[:email].join(", ") %></div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :phone_number, class: 'form-label' %>
    <%= form.text_field :phone_number, class: 'form-input' %>
    <% if @client.errors[:phone_number].any? %>
      <div class="error-message"><%= @client.errors[:phone_number].join(", ") %></div>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.submit 'Submit', class: 'form-submit' %>
  </div>
<% end %>