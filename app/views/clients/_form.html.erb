<%= form_with model: @client do |form| %>
  <div>
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :patronymic %>
    <%= form.text_field :patronymic %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>