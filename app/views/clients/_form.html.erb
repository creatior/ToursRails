<%= form_with model: @client, html: { class: 'model-form' } do |form| %>
  <div class="form-group">
    <%= form.label :surname, class: 'form-label' %>
    <%= form.text_field :surname, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :patronymic, class: 'form-label' %>
    <%= form.text_field :patronymic, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :phone_number, class: 'form-label' %>
    <%= form.text_field :phone_number, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Submit', class: 'form-submit' %>
  </div>
<% end %>