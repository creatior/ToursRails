<%= form_with model: @tour, html: { class: 'model-form' } do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'form-label'  %>
    <%= form.text_field :name, class: 'form-input' %>
    <% if @tour.errors[:name].any? %>
      <div class="error-message"><%= @tour.errors[:name].join(", ") %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :description, class: 'form-label'  %>
    <%= form.text_field :description, class: 'form-input' %>
    <% if @tour.errors[:description].any? %>
      <div class="error-message"><%= @tour.errors[:description].join(", ") %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :duration, class: 'form-label'  %>
    <%= form.text_field :duration, class: 'form-input' %>
    <% if @tour.errors[:duration].any? %>
      <div class="error-message"><%= @tour.errors[:duration].join(", ") %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :price, class: 'form-label'  %>
    <%= form.text_field :price, class: 'form-input' %>
    <% if @tour.errors[:price].any? %>
      <div class="error-message"><%= @tour.errors[:price].join(", ") %></div>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.submit 'Submit', class: 'form-submit'  %>
  </div>
<% end %>