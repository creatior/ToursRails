<%= form_with model: @tour, html: { class: 'model-form' } do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'form-label'  %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :description, class: 'form-label'  %>
    <%= form.text_field :description, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :duration, class: 'form-label'  %>
    <%= form.text_field :duration, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.label :price, class: 'form-label'  %>
    <%= form.text_field :price, class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= form.submit 'Submit', class: 'form-submit'  %>
  </div>
<% end %>